    <h2 class="coin-name"><%= final.name %> (<%= final.symbol %>)</h2>
    <p class="coin-description"><%= final.description.en %></p>
    <div class="coin-details">
        <div class="detail-row">
            <span class="detail-label">Market Cap Rank:</span>
            <span class="detail-value"><%= final.market_cap_rank %></span>
        </div>
